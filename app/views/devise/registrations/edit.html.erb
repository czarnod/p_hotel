<h2 class="text-center mt-4">Edytuj <%= resource_name.to_s.humanize %></h2>
<div class= "container">
  <div class= "row justify-content-center ">
  <div class= "col-6">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group-row mb-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group-row mb-3">
    <%= f.label :password %> <i>(Zostaw pole puste jeśli nie chcesz zmieniać)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:'form-control' %>
    <% if @minimum_password_length %>
      <br />
      <em>minimum <%= @minimum_password_length %> znaków</em>
    <% end %>
  </div>

  <div class="form-group-row mb-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>
  </div>

  <div class="form-group-row mb-3">
    <%= f.label :current_password %> <i>(Potrzebujemy twojego aktualnego hasła, aby móc je zmienić)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Edytuj", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
<div class="form-group row justify-content-center mb-3">
<h3>Usuń moje konto</h3>

<div>Czy jesteś pewien? <%= button_to "Usuń konto", registration_path(resource_name), data: { confirm: "Jesteś pewien?", turbo_confirm: "Jesteś pewien?" }, method: :delete, class: "btn btn-outline-danger" %></div>

<%= link_to "Powrót", :back %>
</div>
</div>
</div>
</div>