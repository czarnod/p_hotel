
<div class= "container">
  <div class= "row justify-content-center">
  <div class= "col-8">
  <%= render 'shared/errors' %>
  <%= form_with(model: pet) do |form| %>
      <div class="form-group-row mb-3">
        <%= form.label :title, 'Imię psa: *', class: "col-2 col-form-label" %>
        <div class="col-sm">
          <%= form.text_field :title, class: "form-control" %>
        </div>
      </div>
    
      <div class="form-group-row mb-3">
      <%= form.label :image, 'Zdjęcie:', class: "col-2 col-form-label" %>
      <div class="col-sm">
        <%= form.file_field :image, class: "form-control" %>
      </div>
    </div>

    <div class="form-group-row mb-3">
    <%= form.label :owner, 'Wlaściciel: *', class: "col-2 col-form-label" %>
    <div class="col-sm">
      <%= form.text_field :owner, class: "form-control" %>
    </div>
    </div>

    <div class="form-group-row mb-3">
    <%= form.label :owner_id, 'ID Wlaściciela:', class: "col-2 col-form-label" %>
    <div class="col-sm">
      <%= form.number_field :onwer_id, class: "form-control" %>
    </div>
    </div>

    <div class="form-group-row mb-3">
    <%= form.label :breed, 'Rasa:', class: "col-2 col-form-label" %>
    <div class="col-sm">
      <%= form.text_field :breed, class: "form-control" %>
    </div>
    </div>

    <div class="form-group-row mb-3">
    <%= form.label :age, 'Wiek(w latach):', class: "col-2 col-form-label" %>
    <div class="col-sm">
      <%= form.number_field :age, class: "form-control" %>
    </div>
    </div>

    <div class="form-group-row mb-3">
    <%= form.label :weight, 'Waga (kg):', class: "col-2 col-form-label" %>
    <div class="col-sm">
      <%= form.number_field :weight, class: "form-control" %>
    </div>
    </div>

    <div class="form-group-row mb-3">
    <%= form.label 'Czy szczepiony?', class: "col-2 col-form-label" %>
    <div class="col-sm">
    <div class="field">
    <%= form.radio_button :vaccinated, true %>
    <%= form.label :vaccinated, 'Tak' %>
  </div>
  
  <div class="field">
    <%= form.radio_button :vaccinated, false %>
    <%= form.label :vaccinated, 'Nie' %>
  </div>
    </div>
    </div>

    <div class="form-group-row mb-3">
    <%= form.label :medicins, 'Leki:', class: "col-2 col-form-label" %>
    <div class="col-sm">
      <%= form.text_field :medicins, class: "form-control" %>
    </div>
    </div>

    <div class="form-group-row mb-3">
    <%= form.label :food, 'Preferowana karma:', class: "col-3 col-form-label" %>
    <div class="col-sm">
      <%= form.text_field :food, class: "form-control" %>
    </div>
    </div>

    <div class="form-group-row mb-3">
    <%= form.label :date_in, 'Pobyt od: *', class: "col-2 col-form-label" %>
    <div class="col-sm">
      <%= form.date_field :date_in, class: "form-control" %>
    </div>
    </div>

    <div class="form-group-row mb-3">
    <%= form.label :date_out, 'Pobyt do: *', class: "col-2 col-form-label" %>
    <div class="col-sm">
      <%= form.date_field :date_out, class: "form-control" %>
    </div>
    </div>

    <div class="form-group-row mb-3">
    <%= form.label :keeper, 'Opiekun:', class: "col-2 col-form-label" %>
    <div class="col-sm">
      <%= form.text_field :keeper, class: "form-control" %>
    </div>
    </div>

    <div class="form-group-row mb-3">
    <%= form.label :description, 'Komentarz:', class: "col-2 col-form-label" %>
    <div class="col-sm">
      <%= form.text_area :description, rows: 5, class: "form-control" %>
    </div>
    </div>
    <div class="warning-box">
    <p style="color: white;">Pola oznaczone gwiazdką nie mogą być puste</p>
  </div>
    <div class="button-center">
      <%= form.submit class: "btn btn-outline-success btn-lg"%>
    </div>
    <% end %>
  </div>
  
      
    </div>

</div>
